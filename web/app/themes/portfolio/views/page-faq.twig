{% extends "base.twig" %}

{% block content %}

{% set pagetype = 'faq' %}
<meta http-equiv="x-pjax-pagetype" content="{{ pagetype }}">

	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			{% include "banner.twig" with {
				title:			post.get_field('title'), 
				image:			post.get_field('background_image'),
				image_height:	post.get_field('image_height')
			} %}
			<section class="large-content">
				<div class="content">
					<div class="left-col">
						{% for question_group in post.get_field('question_group') %}
							<div class="accordion">
								<a class="arrow-btn" href="#">
									<div class="bg"></div>
									<div class="btn-ctn">{{question_group.label}} <span></span></div>
								</a>
								<div class="acc-ctn">
									<div>
										{% for question in question_group.questions %}
											<div class="question">
												<div class="label">Q. {{question.question}}</div>
												<div class="answer"><span>A.</span> {{question.answer}}</div>
											</div>
										{% endfor %}
									</div>
								</div>
							</div>
						{% endfor %}
					</div>
					<div class="right-col">{{post.content}}</div>
				</div>
			</section>

		</article>
	</div> <!-- /content-wrapper -->

{% endblock %}