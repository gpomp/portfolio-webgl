{% extends "base.twig" %}

{% block content %}

{% set pagetype = 'news' %}
<meta http-equiv="x-pjax-pagetype" content="{{ pagetype }}">

	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			{% include "banner.twig" with {
				title:			post.get_field('title'), 
				image:			post.get_field('background_image'),
				image_height:	post.get_field('image_height')
			} %}
			<section class="large-content">
				

				<div class="content">
					<div class="left-col">
						{% include "partials/news-list.twig" %}
					</div>
					<div class="right-col categories">
						{% include "partials/news-categories.twig" %}
					</div>
				</div>
			</section>

		</article>
	</div> <!-- /content-wrapper -->

{% endblock %}