{% extends "base.twig" %}

{% block content %}

	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
				<div class="content main-content">
					<div class="text">
						<h1>{{post.title}}</h1>
						{{post.content}}
						{% for image in post.get_field('images') %}
							<img src="{{TimberImage(image).src('large')}}" alt="">
						{% endfor %}
					</div>
				</div>

		</article>
	</div> <!-- /content-wrapper -->

{% endblock %}
